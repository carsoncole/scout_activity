= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, "Unit number and city"
    %small.text-muted ex. "Troop 100 Boise, ID"
    = f.text_field :name, class: 'form-control'


  .form-group
    = f.label :votes_allowed
    = f.number_field :votes_allowed, class: 'form-control'

  .actions
    = f.submit class: 'btn btn-primary'
