!!!
%html
  %head
    %title ScoutActivity
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      = link_to "ScoutActivity", root_path, class: 'navbar-brand'
      %button.navbar-toggler(type='button' data-toggle="collapse" data-target="#navbarSupportedContent")
        %span.navbar-toggler-icon

      %div.collapse.navbar-collapse#navbarSupportedContent
        %ul.navbar-nav.mr-auto
          - if @troop
            %li.nav-item
              = link_to "Vote", troop_activities_path(@troop), class: 'nav-link'
            %li.nav-item
              = link_to "Propose an Activity", new_troop_activity_path(@troop), class: 'nav-link'
            %li.nav-item
              = link_to info_path, class: 'nav-link' do
                = fa_icon "question"
        - if signed_in?
          Signed in as:
          = current_user.email
          = button_to 'Sign out', sign_out_path, method: :delete
        - else
          = link_to 'Sign in', sign_in_path

    .container
      = yield
