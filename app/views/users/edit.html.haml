.row
  .col-md-3
  .col-md-6
    %h1.mb-5= @user.email

    = form_for @user do |form|
      - if @user.errors.any?
        #error_explanation
          .message= "Ouch! Some bad stuff stopped me from creating your account:"
          %ul
            - @user.errors.full_messages.each do |message|
              %li= message
      = render partial: '/users/form', object: form

      %br
      .submit-field
        = form.submit "Update", class: 'btn btn-primary'