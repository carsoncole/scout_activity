#activities

  %h1
    - if params[:admin]
      Activities
    - else
      Vote

  - if signed_in? && @troop == current_user.troop && !params[:admin]
    .row
      .col-md-3
      .col-md-6
        .text-center.mb-5
          .vote-count
            .badge.badge-primary= current_user.votes_available
            %span.text-muted votes left

  - if @activities.any?

    - unless signed_in?
      .text-center.mb-4= button_to "Sign in to vote", sign_in_path, method: :get, class: 'btn btn-primary'

    .row
      .col-md-2
      .col-md-8
        %table.table.activities
          - unless params[:admin]
            %thead
              %tr
                %th
                %th= fa_icon "users"
                - if signed_in? && current_user.troop == @troop
                  %th
                  %th
                    = fa_icon "user"
          %tbody
            = render(@activities)

  %br

  - if @high_adventure_activities&.any?
    .row
      .col-md-2
      .col-md-8
        %h3.text-center.mb-0 High Adventure
        %p.text-muted.text-center.mb-4 Please only vote if you are at least 13 years old

        %table.table.activities
          %tbody
            = render partial: 'activity', collection: @high_adventure_activities, as: :activity

        %hr
  - if @activities.empty?
    %p.text-center
      No activities have been proposed.
      
    = render 'share_link'

  - unless params[:admin]
    .row
      .col-md-12.text-center
        .share-link
          = link_to 'http://www.facebook.com/sharer.php?u=' +request.url, target: :blank do
            = fa_icon "share"
            Share