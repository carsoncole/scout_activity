= form_for [@unit, @activity, @question] do |f|
  - if @activity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :question, 'Question or comment on this activity?'
    = f.text_field :content, class: 'form-control', placeholder: 'Enter your question or comment'


  .action
    = f.submit "Ask your question or comment", class: 'btn btn-primary'